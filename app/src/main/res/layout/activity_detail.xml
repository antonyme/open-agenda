<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imagen"
            android:layout_height="262dp"
            android:layout_width="311dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a_detail_txtv_test_name"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/a_detail_txtv_test_conditions"
            android:layout_alignLeft="@+id/a_detail_txtv_test_conditions"
            android:textStyle="bold|italic"
            android:layout_alignStart="@+id/a_detail_txtv_test_conditions"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:weightSum="1">

            <TextView
                android:text="TextView"
                android:layout_height="wrap_content"
                android:id="@+id/a_detail_txtv_test_date"
                android:layout_below="@+id/a_detail_txtv_test_descrip"
                android:layout_alignLeft="@+id/a_detail_txtv_test_descrip"
                android:layout_alignStart="@+id/a_detail_txtv_test_descrip"
                android:layout_marginTop="15dp"
                android:layout_width="128dp"
                android:layout_marginLeft="15dp" />
            <TextView
                android:text="TextView"
                android:layout_width="229dp"
                android:layout_height="86dp"
                android:id="@+id/a_detail_txtv_test_conditions"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/a_detail_txtv_test_descrip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>


        <TextView
            android:text="TextView"
            android:layout_width="356dp"
            android:id="@+id/a_detail_txtv_test_city"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.01" />
        <TextView
            android:id="@+id/a_detail_txtv_test_descrip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp" />
    </TableLayout>
</ScrollView>

